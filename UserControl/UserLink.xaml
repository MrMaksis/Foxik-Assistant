<UserControl x:Class="Foxik_Assistant.UserControl.UserLink"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Foxik_Assistant.UserControl"
             mc:Ignorable="d" Width="50" Height="50">
    <Grid Width="50" Height="50">
        <Image x:Name="UserLinkImage" Source="/Images/vr-chat-icon.png" MouseLeftButtonDown="Image_MouseLeftButtonDown" Cursor="Hand" Margin="5,5,5,5" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Image Source="/Images/close-icon.png" MaxWidth="20" MaxHeight="20" HorizontalAlignment="Right" VerticalAlignment="Top" MouseLeftButtonDown="Image_MouseLeftButtonDown_1"/>
    </Grid>
</UserControl>
